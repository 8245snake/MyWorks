<div>

    <Row>
        <Col Class="schedule-container" Xs="24" Sm="24" Md="12" Lg="8" Xl="6">
            @*カレンダーとか*@
            <SchedulingFrame />
        </Col>
        <Col Xs="24" Sm="24" Md="12" Lg="16" Xl="18">
            <Row Class="input-container">
                <Col Span="24">
                        @*詳細入力エリア*@
                    <TaskInputForm />
                </Col>
            </Row>
            <Collapse DefaultActiveKey="@(new[]{"1"})">
                <Panel Header="ToDo" Key="1">
                    @*ToDoリスト*@
                    <ToDoList/>
                </Panel>
                <Panel Header="集計" Key="2">
                    <Row Class="statistic-container">
                        <Col Span="24">
                            @*統計エリア*@
                            <StatisticFrame/>
                        </Col>
                    </Row>
                </Panel>
            </Collapse>
        </Col>
    </Row>

</div>

<style>
    .schedule-container {
        height: 100vh;
        padding: 20px;
        margin: 0px;
    }

    .input-container {
        min-height: 50vh;
        padding: 20px;
        margin: 0px;
    }

    .statistic-container {
        padding: 20px;
        margin: 0px;
    }

    @@media screen and (min-width:480px) {
        .statistic-container {
            display: none;
        }

        .schedule-container {
            height: 50vh;
        }

        /*　for iPhone Landscape　(iPhone 横)　*/
    }

    @@media screen and (min-width:768px) and ( max-width:1024px) {
        /*　for iPad 　*/
        .statistic-container {
            display: inherit;
        }

        .schedule-container {
            height: 100vh;
        }
    }

    @@media screen and (min-width:1024px) {
        /*　for PC　*/
        .statistic-container {
            display: inherit;
        }

        .schedule-container {
            height: 100vh;
        }
    }

</style>

